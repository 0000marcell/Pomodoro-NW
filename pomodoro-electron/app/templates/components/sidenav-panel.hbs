<div class="sidenav-panel-overlay" 
  onclick={{action 'overlayClick'}}>
</div>
<div class="sidenav-panel row">
  <div class="sidenav-panel-side column">
    <div class="sidenav-panel-side-header">
      <div onclick={{action 'showLeftPanel'}}>
        {{fa-icon 'chevron-left'}}
      </div>
    </div>
    <div class="sidenav-panel-side-body row">
      <div class="sidenav-panel-side-body-container">
        {{#if (eq mode 'editTask')}}
          {{task-form 
            mode="edit" 
            saveTask=(route-action "editTask")
            task=selectedTask}} 
        {{else if (eq mode "createTask")}}
          {{task-form 
            mode="create" 
            saveTask=(route-action "createTask")
            task=newObj
          }} 
        {{else if (eq mode "createTag")}}
          {{tag-form 
            mode="create" 
            saveTag=(route-action "createTag")
            tag=newTag
          }}
        {{else if (eq mode "editTag")}}
          {{tag-form 
            mode="edit" 
            saveTag=(route-action "editTag")
            tag=newTag
          }}
        {{/if}}
      </div>
    </div>
  </div>
  <div class="sidenav-panel-aside">
    {{sidenav-list 
      model=model
      showLeftPanel=leftPanel
      listMode=listMode
    }}
    <button {{action 'showLeftPanel'}}>show</button>
  </div>
</div>
