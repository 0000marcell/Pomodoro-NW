<div class="tasks-sidepanel-overlay" 
  onclick={{action 'overlayClick'}}>
</div>
<div class="tasks-sidepanel row">
  <div class="tasks-sidepanel-side column">
    <div class="tasks-sidepanel-side-header">
      <div onclick={{action 'showLeftPanel'}}>
        {{fa-icon 'chevron-left'}}
      </div>
    </div>
    <div class="tasks-sidepanel-side-body row">
      <div class="tasks-sidepanel-side-body-container">
        {{#if (eq mode 'editTask')}}
          {{task-form 
            mode="edit" 
            saveTask=(route-action "editTask")
            task=selectedTask}} 
        {{else if (eq mode "createTask")}}
          {{task-form 
            mode="create" 
            saveTask=(route-action "createTask")
            task=newTask
          }} 
        {{/if}}
      </div>
    </div>
  </div>
  <div class="tasks-sidepanel-aside">
    {{tasks-sidenav 
      showCreateTask=(action "showCreateTask")
      showEditTask=(action "showEditTask") 
      model=model }}
    <button {{action 'showLeftPanel'}}>show</button>
  </div>
</div>
