<div class="task-form-header row">
  <h3>{{comp.mode}} task</h3>
  {{#if (eq comp.mode 'edit')}}
    <button
      onclick={{action 'completeTask' task}}>
      complete
    </button>  
  {{/if}}
</div>
{{#if msgs}}
  {{#info-card}}
    <ul id="taf-test-msgs">
      {{#each msgs as |msg|}}
        <li>{{msg}}</li>
      {{/each}}
    </ul> 
  {{/info-card}}
{{/if}}
{{input type='text' value=comp.model.name}}
{{input type='text' value=comp.model.description}}
{{#dropdown-list selected=comp.model.tag 
  items=comp.model.tags as |tag|}}
  <p>{{tag.name}}</p>
{{/dropdown-list}}
<button class="button-primary"
  id="taf-test-saveButton"
  onclick={{action 'saveTask' task}}>Save</button>
